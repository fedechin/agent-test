# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./conversations.db
# For production (PostgreSQL)
# DATABASE_URL=postgresql://nazareth_user:nazareth_password_change_in_production@db:5432/nazareth_conversations

# Document Configuration
DOCS_FOLDER=data
CONTEXT_FILE=context/context.txt

# Security Configuration
SECRET_KEY=your-very-secure-secret-key-change-this-in-production-use-long-random-string

# Webhook Security
# Enable/disable Twilio signature validation (true/false)
# Set to false for local testing, true for production
TWILIO_VALIDATE_REQUESTS=false

# IP Whitelist (optional)
# Comma-separated list of allowed IP addresses for webhook endpoint
# Leave empty to allow all IPs. Localhost is always allowed.
# Example: ALLOWED_IPS=1.2.3.4,5.6.7.8
# For Twilio, you may want to add their IP ranges
ALLOWED_IPS=

# Application Configuration
ENVIRONMENT=development